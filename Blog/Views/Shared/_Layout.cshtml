@model IEnumerable<Room>;
@{
    var currentId = ViewData["currentRoom"];
   
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -Evalon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>
<body class="bg-dark" onload="setGroup(@currentId.ToString())">
    
    
        <header>
            
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <h3 class="text-white">@User.Identity.Name</h3>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link nav-hover text-white" asp-area="" asp-controller="Home" asp-action="Index">Ustawienia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-hover text-white" asp-area=" " asp-controller="Account" asp-action="LogOut">Wyloguj</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <aside>
        <div class="customScroll "id="sidebar">
            <hr />
            
            <ul class="list-unstyled components">
                @foreach(var r in Model){
                    string klasa = "nav-link";
                    @if (r.Id.Equals(currentId)) { klasa = "sidebar_selected joinGroup"; }

                    <li class="@klasa">
                        @Html.ActionLink(r.Name, "SelectGroup", new { roomId = r.Id})
                    </li>

                }
            </ul>
            
           
            <hr />

        </div>
    </aside>
        
        <div id="main">
            <main role="main">
                @RenderBody()
            </main>
        </div>

    <aside>
        <div id="chatbar">
            <ul class="list-unstyled components">
              <li>asd</li>
              <li>asd</li>
              <li>asd</li>

            </ul>
        </div>
    </aside>
    
        <footer class="border-top footer text-muted">
            <div class="container">
            &copy; 2022 - Blog - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    


    @await RenderSectionAsync("Scripts", required: false)

    


        

    
</body>
</html>
