@model CreateRoomView;
@{
    Layout = "_LayoutEmpty";
}
    


<div class="ml-auto mr-auto mt-3" style="display: flex; justify-content: center; align-items: center;">
    <div style="">
        <h1>Stwórz Grupę</h1>

        @using (@Html.BeginForm("CreateRoom", "Chat", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
         
            <br />

            <span>Dodaj zdjęcie:  </span> <input type="file" name="file" />
            <br />
            
            <input type="submit" value="Stwórz" />

        }
     
        @if (TempData.ContainsKey("ErrorMessage"))
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
    </div>
   

</div>
  